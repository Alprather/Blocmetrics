<h1>Registered Applications</h1>

<div class="row">
  <div class="col-md-8">
    <% @registered_applications.each do |app| %>
    <div class="media">
      <div class="media-body">
        <h4 class="media-heading">
          <%= app.name %>
          <small>
            <%= link_to "Delete", [app.user, app], method: :delete %></small>
        </h4>
        <small> 
          <%= app.url %>
        </small>
      </div>
    </div>
    <% end %>
  </div>
  <div class="col-md-4">
    <%= link_to "Register New Apllication", new_registered_application_path, class: 'btn btn-success' %>
  </div>
</div>
